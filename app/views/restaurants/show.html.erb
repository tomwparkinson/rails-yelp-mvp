<h2><%= @restaurant.name %></h2>

<h4><%= @restaurant.address %></h4>

<h4><%= @restaurant.category.capitalize %></h4>

<p><strong>Reviews</strong></p>
<ul class="list-group py-3">
  <% @restaurant.reviews.order(created_at: :desc).each do |review| %>
    <p><%= review.rating %> star rating</p>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>

<h3>Add a review</h3>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, label: "Rating (0-5 stars)" %>
  <%= f.input :content, label: "Your review" %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to restaurants", restaurants_path, class: "btn btn-secondary"%>
